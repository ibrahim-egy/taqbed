<%- include('partials/header') %>

    <div class="table-wrapper">
        <a class="button button-dark" href="/data" role="button">Back</a>
        <table class="all-owners-table table" loading="lazy">
            <thead>
                <tr>
                    <th scope="col">No.</th>
                    <th scope="col">Name</th>
                    <th scope="col">National ID</th>
                    <th scope="col">Amount</th>
                    <th scope="col">View</th>
                </tr>
            </thead>
            <tbody>
                <% owners.forEach((owner, index)=> { %>
                    <tr>
                        <td>
                            <%=index + 1%>
                        </td>
                        <td>
                            <%=owner.name%>
                        </td>
                        <td>
                            <%=owner.nationalId%>
                        </td>
                        <td>
                            <%=owner.amount%>
                        </td>
                        <td>
                            <form action="/owner?name=<%=owner.name%>" method="post">
                                <button class="button button-dark" type="submit" name="where" value="allOwnersPost">
                                    <i class="fa-solid fa-arrow-right-from-bracket"></i>
                                </button>
                                <input type="hidden" value="<%=owner.id%>" name="id">
                            </form>
                        </td>
                    </tr>
                    <% }) %>

            </tbody>
        </table>

    </div>

    <%- include('partials/footer') %>